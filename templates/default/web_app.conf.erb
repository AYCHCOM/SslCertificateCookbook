<VirtualHost *:<%= @params[:port] ? @params[:port] : '443' %>>
  ServerAdmin <%= node['apache']['contact'] %>
<% if @params[:server_name].kind_of? String -%>
  ServerName <%= @params[:server_name] %>
<% end -%>
<% if @params[:server_aliases].kind_of? Array -%>
  ServerAlias <% @params[:server_aliases].each do |a| %><%= a %> <% end %>
<% end -%>
  DocumentRoot <%= @params[:docroot] %>
  RewriteEngine On

  <Directory <%= @params[:docroot] %>>
    Options <%= [@params[:directory_options] || 'FollowSymLinks' ].flatten.join ' ' %>
    AllowOverride <%= [@params[:allow_override] || 'None' ].flatten.join ' ' %>
    <% if node['apache']['version'].to_f >= 2.4 -%>
    Require all granted
    <% else -%>
    Order allow,deny
    Allow from all
    <% end -%>
  </Directory>

  <Directory />
    Options FollowSymLinks
    <% if node['apache']['version'].to_f >= 2.4 -%>
    Require all denied
    <% else -%>
    Allow from none
    <% end -%>
  </Directory>

  <Location /server-status>
    SetHandler server-status

    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
  </Location>

  LogLevel info
  ErrorLog <%= node['apache']['log_dir'] %>/<%= @params[:name] %>-error.log
  CustomLog <%= node['apache']['log_dir'] %>/<%= @params[:name] %>-access.log combined

  <% if @params[:directory_index] -%>
  DirectoryIndex <%= [@params[:directory_index]].flatten.join ' ' %>
  <% end -%>

  <% if node['apache']['version'].to_f >= 2.4 -%>
  LogLevel info rewrite:trace1
  <% else -%>
  LogLevel info
  RewriteLog <%= node['apache']['log_dir'] %>/<%= @application_name %>-rewrite.log
  RewriteLogLevel 0
  <% end -%>

  # Canonical host, <%= @params[:server_name] %>
  RewriteCond %{HTTP_HOST} !^<%= @params[:server_name] %> [NC]
  RewriteCond %{HTTP_HOST} !^$
  RewriteRule ^/(.*)$ http://<%= @params[:server_name] %>/$1 [L,R=301]

  RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
  RewriteCond %{SCRIPT_FILENAME} !maintenance.html
  RewriteRule ^.*$ /system/maintenance.html [L]

  # ----------------- #
  # SSL Configuration #
  # ----------------- #

  SSLEngine on

  SSLCertificateFile    <%= @params[:ssl_cert] %>
  SSLCertificateKeyFile <%= @params[:ssl_key] %>
  <% if @params[:ssl_chain].is_a?(String) -%>
  SSLCertificateChainFile <%= @params[:ssl_chain] %>
  <% end -%>

  BrowserMatch "MSIE [2-6]" \
    nokeepalive ssl-unclean-shutdown \
    downgrade-1.0 force-response-1.0
  # MSIE 7 and newer should be able to use keepalive
  BrowserMatch "MSIE [17-9]" ssl-unclean-shutdown

  <% if @params[:ssl_protocol].is_a?(String) -%>
    SSLProtocol <%= @params[:ssl_protocol] %>
  <% else -%>
    SSLProtocol <%= node['ssl_certificate']['web']['protocol'] %>
  <% end -%>
  <% if @params[:ssl_cipher_suite].is_a?(String) -%>
    SSLCipherSuite <%= @params[:cipher_suite] %>
  <% else -%>
    SSLCipherSuite <%= node['ssl_certificate']['web']['cipher_suite'] %>
  <% end -%>

<% if @params[:extra_directives].kind_of?(Hash)
     @params[:extra_directives].each do |name, value|
-%>
  <%= name.to_s %> <%= value.to_s %>
<%   end
   end -%>
</VirtualHost>
